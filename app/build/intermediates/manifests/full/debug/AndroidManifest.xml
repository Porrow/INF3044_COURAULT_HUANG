<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.porrow.tfchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="net.porrow.tfchat.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="net.porrow.tfchat.ChoiceActivity" />
        <activity android:name="net.porrow.tfchat.RoomActivity" />

        <service
            android:name="net.porrow.tfchat.Connection"
            android:exported="false" >
        </service>
        <service
            android:name="net.porrow.tfchat.MyIntentService"
            android:exported="false" >
        </service>
    </application>

</manifest>